# ===========================================
# AnonXMusic Bot Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED VARIABLES - MUST BE FILLED
# ===========================================

# Get these from https://my.telegram.org/apps
API_ID=your_api_id_here
API_HASH=your_api_hash_here

# Get this from @BotFather on Telegram
BOT_TOKEN=your_bot_token_here

# MongoDB connection string from https://cloud.mongodb.com
MONGO_DB_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name

# Your Telegram user ID (get from @FallenxBot or @userinfobot)
OWNER_ID=your_telegram_user_id

# ===========================================
# STRING SESSIONS - AT LEAST ONE REQUIRED
# ===========================================
# Get these from @StringFatherBot on Telegram
# You can use multiple sessions for better performance
STRING_SESSION=your_string_session_1
STRING_SESSION2=your_string_session_2
STRING_SESSION3=your_string_session_3
STRING_SESSION4=your_string_session_4
STRING_SESSION5=your_string_session_5

# ===========================================
# OPTIONAL VARIABLES
# ===========================================

# Chat ID for logging bot activities (optional)
LOGGER_ID=your_logger_chat_id

# Spotify API credentials (optional, for Spotify support)
# Get from https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# ===========================================
# CONFIGURATION VARIABLES
# ===========================================

# Duration limit for songs in minutes (default: 60)
DURATION_LIMIT=60

# Auto leave assistant after interval (True/False)
AUTO_LEAVING_ASSISTANT=False

# Playlist fetch limit (default: 25)
PLAYLIST_FETCH_LIMIT=25

# File size limits in bytes
TG_AUDIO_FILESIZE_LIMIT=104857600
TG_VIDEO_FILESIZE_LIMIT=1073741824

# Support links
SUPPORT_CHANNEL=https://t.me/FallenAssociation
SUPPORT_CHAT=https://t.me/DevilsHeavenMF

# ===========================================
# RENDER DEPLOYMENT VARIABLES
# ===========================================
# These are automatically set by Render, but you can override them

# Upstream repository for updates
UPSTREAM_REPO=https://github.com/AnonymousX1025/AnonXMusic
UPSTREAM_BRANCH=master

# Git token for private repositories (if needed)
GIT_TOKEN=your_git_token_here
